<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.recipeCreationStage.RecipeCreationBottomLayer">

    <children>

        <!-- Buttons for creating or canceling recipe creation -->
        <HBox layoutX="14.0" layoutY="189.0" spacing="10">
            <Button fx:id="createnewRecipeButton" mnemonicParsing="false" style="-fx-background-color: #81E86D;" text="Skapa recept" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="cancel" mnemonicParsing="false" style="-fx-background-color: #81E86D;" text="Avbryt" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
        </HBox>
        <Button fx:id="choosePicture" layoutX="104.0" layoutY="13.0" mnemonicParsing="false" style="-fx-background-color: #81E86D;" text="Välj bild" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>

        <!-- ImageView for displaying selected image -->
        <ImageView fx:id="recipeImageView" fitHeight="138.0" fitWidth="243.0" layoutX="14.0" layoutY="48.0" preserveRatio="true" />
        <ChoiceBox fx:id="categoryDropList" layoutX="286.0" layoutY="13.0" prefWidth="150.0" style="-fx-background-color: #81E86D;" />
        <ListView fx:id="chosenCategories" layoutX="443.0" layoutY="48.0" prefHeight="138.0" prefWidth="134.0" />
      <Button fx:id="addCategoryButton" layoutX="286.0" layoutY="48.0" mnemonicParsing="false" style="-fx-background-color: #81E86D;" text="Lägg till" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="removeCategoriesButton" layoutX="355.0" layoutY="48.0" mnemonicParsing="false" style="-fx-background-color: #81E86D;" text="Ta bort alla" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="443.0" layoutY="13.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="134.0" style="-fx-background-color: #81E86D;" text="Receptets kategorier" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
    </children>

</AnchorPane>
