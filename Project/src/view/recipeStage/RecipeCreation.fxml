<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.RecipeCreationController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="10">
        <Label text="Recipe Name" />
        <TextField fx:id="recipeNameField" promptText="Enter recipe name" />

        <Label text="Instructions" />
        <TextArea fx:id="instructionsArea" promptText="Enter recipe instructions" />

        <Label text="Ingredient Details" />
        <HBox spacing="10">
            <TextField fx:id="ingredientNameField1" promptText="Ingredient Name" />
            <TextField fx:id="ingredientCostField1" promptText="Cost" />
            <TextField fx:id="ingredientAmountField1" promptText="Amount" />
            <ComboBox fx:id="ingredientMeasurementComboBox1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="GRAMS" />
                        <String fx:value="MILLILITERS" />
                        <!-- Add more measurement options if needed -->
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <!-- Add more ingredient fields as needed -->

        <!-- Button for choosing image -->
        <Button text="Choose Image" onAction="#chooseImage" />

        <!-- ImageView for displaying selected image -->
        <ImageView fx:id="recipeImageView" fitWidth="200" fitHeight="200" preserveRatio="true" />

        <!-- Buttons for creating or canceling recipe creation -->
        <HBox spacing="10">
            <Button fx:id="createnewRecipeButton" text="Create Recipe" onAction="#createOwnRecipe"/>
            <Button text="Cancel"/>
        </HBox>
    </VBox>
</AnchorPane>
